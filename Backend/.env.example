# MySQL Configuration - Portal Master DB
MYSQL_ROOT_PASSWORD=candyhire_portal_root_pass
MYSQL_DATABASE=CandyHirePortal
MYSQL_USER=candyhire_portal_user
MYSQL_PASSWORD=candyhire_portal_pass

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-please
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=604800

# CandyHire SaaS DB Connection (for tenant provisioning)
SAAS_DB_HOST=host.docker.internal
SAAS_DB_PORT=3307
SAAS_DB_USER=candyhire_user
SAAS_DB_PASSWORD=candyhire_pass

# PayPal Configuration
# Get credentials from: https://developer.paypal.com/dashboard/applications/sandbox
# 1. Create a REST API app
# 2. Copy Client ID and Secret
# 3. For production, switch PAYPAL_MODE to 'live' and use production credentials
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Application
APP_ENV=development
APP_URL=http://localhost:4200
API_URL=http://localhost:8082
SAAS_URL=http://localhost:4202

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:4202
